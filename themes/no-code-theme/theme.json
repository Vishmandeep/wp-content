{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "base",
					"color": "#1e1e1e",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#f0f0f0",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#4169E1",
					"name": "Royal Blue"
				},
				{
					"slug": "secondary",
					"color": "#FFD700",
					"name": "Gold"
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1600px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ],
			"blockGap": "1.5rem"
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System (Roboto, Segoe UI, Ubuntu)",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"name": "Small",
					"size": "14px"
				},
				{
					"slug": "medium",
					"name": "Medium",
					"size": "18px"
				},
				{
					"slug": "large",
					"name": "Large",
					"size": "24px"
				},
				{
					"slug": "x-large",
					"name": "Extra Large",
					"size": "32px"
				}
			],
			"lineHeight": {
				"small": "1.4",
				"medium": "1.6",
				"large": "1.8"
			}
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"lineHeight": "var(--wp--custom--typography--lineHeight--medium)"
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"spacing": {
			"blockGap": "var(--wp--custom--spacing--blockGap)"
		}
	}
}
